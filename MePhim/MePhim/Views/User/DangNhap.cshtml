
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">
    td {
        height: 40px;
    }
</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<h2 style="text-align:center;color:#ffce54">ĐĂNG NHẬP</h2>
<table align="center">
    @using (Html.BeginForm("DangNhap", "User"))
    {
        @Html.ValidationSummary(true)
        <tr>
            <td  style="color:#ffce54">Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Err1"]
            </td>
        </tr>
        <tr>
            <td  style="color:#ffce54">Mật khẩu:</td>
            <td>
                @Html.Password("MatKhau")
                @ViewBag.Err2
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" style="background-color:#242526;color:#ffce54"/>
            </td>
        </tr>
    }
</table>

