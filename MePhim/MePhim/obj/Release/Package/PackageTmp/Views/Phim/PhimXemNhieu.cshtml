
@model IEnumerable<MePhim.Models.PHIM>

<div class="row text-center" style="margin-right:50px">
    @foreach (var phim in Model)
    {
        <div class="col-lg-3 col-md-3">
            <div class="thumbnail" style="background-color:#242526">
                <img src="~/Images/@phim.AnhBia" alt="Thumbnail Image 1" class="img-responsive img-rounded imgbook" style=" width :400px;">

                <div class="caption">
                    <h4 style=" min-height :70px;">
                        <a href="@Url.Action("ChiTietPhim", "Phim", new {id =phim.MaPhim})">@phim.TenPhim</a>
                    </h4>
                    <p style="color:#fff"> <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Lượt xem: @phim.LuotXem</p>
                    <p>
                        <a href="@Url.Action("XemNgay","Xem", new { id= phim.MaPhim })" class="btn btn-danger" role="button">
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Xem Ngay
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
