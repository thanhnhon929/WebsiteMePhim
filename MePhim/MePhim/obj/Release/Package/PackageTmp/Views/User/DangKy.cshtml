@model MePhim.Models.NGUOIXEM
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">
    tr {
        height: 40px;
    }
</style>

<h4 style="color: red; text-align: center;">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center; color:#ffce54">ĐĂNG KÝ THÀNH VIÊN</h2>

    @using (Html.BeginForm("DangKy", "User"))
    {
        @Html.ValidationSummary(false)
        <tr>
            <td style="color:#ffce54">Họ tên:</td>
            <td>
                @Html.TextBox("HoTen")
                @Html.ValidationMessageFor(model => model.HoTen, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="color:#ffce54">Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TaiKhoan")
                @Html.ValidationMessageFor(model => model.TaiKhoan, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td  style="color:#ffce54">Mật khẩu:</td>
            <td>
                @Html.Password("MatKhau")
                @Html.ValidationMessageFor(model => model.MatKhau, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td  style="color:#ffce54">Mật khẩu nhập lại:</td>
            <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
        </tr>
        <tr>
            <td  style="color:#ffce54">Email:</td>
            <td>
                @Html.TextBox("Email")
                @Html.ValidationMessageFor(model => model.Email, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td  style="color:#ffce54">Điện thoại:</td>
            <td>
                @Html.TextBox("DienThoai")
                @Html.ValidationMessageFor(model => model.DienThoai, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td  style="color:#ffce54">Ngày sinh:</td>
            <td><input type="date" name="NgaySinh" /> @Html.ValidationMessageFor(model => model.NgaySinh, "(*)", new { @class = "text-danger" })</td>
           
        </tr>
        <tr>
            <td  style="color:#ffce54">Địa chỉ:</td>
            <td><input type="text" name="DiaChi" /></td>
        </tr>
        <tr>
            <td></td>
            <td style="color:#ffce54"><input type="submit" value="Đăng ký" style="background-color:#242526"/><input type="reset" value="Xóa thông tin" style="background-color:#242526" /></td>
        </tr>
    }
</table>

