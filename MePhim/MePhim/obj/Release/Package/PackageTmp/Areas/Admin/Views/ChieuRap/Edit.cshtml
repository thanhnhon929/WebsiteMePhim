@model MePhim.Models.CHIEURAP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="color:#ffce54">PHIM CHIẾU RẠP</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group"style="color:#ffce54">
            <label class="control-label col-md-2">Mã Phim Chiếu Rạp:</label>
            <div class="col-md-10" style="color:black">
                <input type="text" size="70" name="iMaChieuRap" value="@Model.MaChieuRap" readonly />
            </div>
        </div>
        <div class="form-group"style="color:#ffce54">
            <label class="control-label col-md-2">Tên Phim Chiếu Rạp:</label>
            <div class="col-md-10" style="color:black">
                <input type="text" size="70" name="sTenChieuRap" value="@Model.TenChieuRap" required />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
